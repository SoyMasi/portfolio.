---
import Button from "../components/button.astro";
import Projects from "../components/home/projects.astro";
import Separator from "../components/home/separator.astro";
import About from "../components/home/about-me.astro";
import Skills from "../components/home/skills.astro";
import Layout from "../layouts/main.astro";
import Badge from "../components/Badge.astro";
---

<Layout
  title="Maximiliano Gomez Portfolio - Fullstack Developer"
  description=""
>
  <div
    class="relative z-20 w-full max-w-4xl mx-auto mt-16 px-7 md:mt-24 lg:mt-32 xl:px-0"
    id="home"
  >
    <div class="flex flex-col items-center md:flex-row">
      <div class="relative w-full md:w-1/2">
        <h1
          class="mb-6 text-4xl font-bold leading-tight md:text-4xl lg:text-6xl dark:text-white"
        >
          Hey, I'm Maxi.
        </h1>
        <a
          href="https://www.linkedin.com/in/maximiliano-jesus-gomez-3341bb1a9/"
          target="__blank"
          rel="noopener"
        >
          <Badge />
        </a>
        <p
          class="mb-4 text-base text-neutral-600 dark:text-neutral-400"
          style="padding-top: 20px;"
        >
          I'm a Fullstack Developer - Information Systems Engineering Student
          living in Rosario Argentina.
        </p>
        <p class="mb-2 font-semibold text-neutral-800 dark:text-neutral-200">
          I can help you out with:
        </p>
        <ul
          class="py-2 space-y-[3px] text-sm list-disc list-inside text-neutral-500 dark:text-neutral-400"
        >
          <li>React.js Development</li>
          <li>Node.js Development</li>
          <li>Website Design</li>
          <li>and more...</li>
        </ul>
        <Button
          text="Download CV"
          target="__blank"
          rel="noopener  noreferrer"
          link="https://drive.google.com/file/d/1rJV2iP9nPy7y-4z7bDChuuDVa2Q7uNFo/view?usp=sharing"
        />
      </div>
      <div
        class="relative justify-end hidden w-full mt-10 md:flex md:pl-10 md:w-1/2 md:mt-0 md:translate-y-4 xl:translate-y-0"
      >
        <div class="relative z-50 w-full">
          <div class="relative z-30 px-10">
            <img
              src="/assets/images/me.gif"
              loading="eager"
              decoding="auto"
              class="relative z-30 w-full md:max-w-md mx-auto dark:-translate-y-0.5"
            />
          </div>
        </div>
      </div>
    </div>
  </div>

  <Separator />
  <About id="about-me" />
  <Separator />
  <Skills />
  <Separator />
  <Projects id="projects" />
</Layout>
